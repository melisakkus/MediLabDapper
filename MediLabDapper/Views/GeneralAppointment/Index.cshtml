@model List<ResultAppointmentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Açık Randevular</h4>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>Doktor</th>
                        <th>Departman</th>
                        <th>Tarİh - Saat</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameSurname</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.Date.ToString("dd-MM-yyyy") @item.Time.ToString("hh\\:mm")</td>

                            <td>
                                <a href="/GeneralAppointment/Delete/@item.AppointmentId" class="btn btn-sm btn-danger me-2">
                                    <i class="bx bx-trash me-1"></i> Sil
                                </a>
                                <a href="/GeneralAppointment/Update/@item.AppointmentId" class="btn btn-sm btn-info">
                                    <i class="bx bx-edit-alt me-1"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="/GeneralAppointment/Create" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> Sisteme Yeni Randevu Ekle
        </a>
    </div>
</div>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Dolu Randevular</h4>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>Doktor</th>
                        <th>Departman</th>
                        <th>Tarİh - Saat</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in @ViewBag.NotEmptyAppointments)
                    {
                        <tr>
                            <td>@item.NameSurname</td>
                            <td>@item.DepartmentName</td>
                            <td>@item.Date.ToString("dd-MM-yyyy") @item.Time.ToString("hh\\:mm")</td>

                            <td>
                                <a href="/Appointment/Update/@item.AppointmentId" class="btn btn-sm btn-success me-2">
                                     Randevu Detayları
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>