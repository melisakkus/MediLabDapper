@model IEnumerable<ResultDepartmentDto>

@{
    ViewData["Title"] = "Bölümler Yönetimi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
@{
    int count = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Departmanlar</h4>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Bölüm Adı</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                        count++;
                        <tr>
                                <td><strong>@count</strong></td>
                            <td> <img src="@item.ImageUrl" style="width:80px;height:80px;border-radius: 50%;" />    @item.DepartmentName</td>
                            <td>@(item.Description.Length > 79 ? item.Description.Substring(0, 79) + "..." : item.Description)</td>
                            <td>
                                    <a href="/Department/DeleteDepartment/@item.DepartmentId" class="btn btn-sm btn-danger me-2">
                                        <i class="bx bx-trash me-1"></i> Sil
                                    </a>
                                    <a href="/Department/UpdateDepartment/@item.DepartmentId" class="btn btn-sm btn-info">
                                        <i class="bx bx-edit-alt me-1"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }                    
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="/Department/CreateDepartment" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> Yeni Bölüm Ekle
        </a>
    </div>
</div>