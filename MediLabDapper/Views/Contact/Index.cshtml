@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
@{
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">İletişim Bilgileri</h4>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Konum</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>@item.Location</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>
                                <a href="/Contact/Delete/@item.ContactId" class="btn btn-sm btn-danger me-2">
                                    <i class="bx bx-trash me-1"></i> Sil
                                </a>
                                <a href="/Contact/Update/@item.ContactId" class="btn btn-sm btn-info">
                                    <i class="bx bx-edit-alt me-1"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="/Contact/Create" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> Yeni İletişim Bilgisi Ekle
        </a>
    </div>
</div>

