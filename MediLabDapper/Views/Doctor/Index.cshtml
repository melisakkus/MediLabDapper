@model IEnumerable<ResultDoctorWithDepartmentDto>

@{
    ViewData["Title"] = "Index";
}
@{
    int count = 0;
}

<h1>Doktorlar</h1>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Bölümü</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px; border-radius:50%"/></td>            
            <td>@item.NameSurname</td>
            <td>@item.Description</td>
            <td>@item.DepartmentName</td>
            <td>
                <a href="/Doctor/DeleteDoctor/@item.DoctorId" class="btn btn-danger">Sil</a>
                <a href="/Doctor/UpdateDoctor/@item.DoctorId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a href="/Doctor/CreateDoctor" class="btn btn-info">Yeni Doktor Ekle</a>
</div>
