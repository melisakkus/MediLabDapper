@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
@{
        int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Değerlendirmeler</h4>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Değerlendirme</th>
                        <th>Ad Soyad</th>
                        <th>Puan</th>
                        <th>Meslek</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td><strong>@count</strong></td>
                            <td>"@(item.Comment.Length > 50 ? item.Comment.Substring(0,50) + "..." : item.Comment)"</td>

                            <td><img src="@item.ImageUrl" style="width:50px;height:50px; border-radius:50%" />   @item.FullName</td>
                            <td>
                                @for (int i = 0; i < item.Review; i++)
                                {
                                    <i class="bx bxs-star text-warning"></i>
                                }
                                @for (int i = 0; i < (5 - item.Review); i++)
                                {
                                    <i class="bx bx-star text-warning"></i>
                                }
                            </td>

                            <td>@item.JobTitle</td>
                            <td>
                                <a href="/Testimonial/Delete/@item.TestimonialId" class="btn btn-sm btn-danger me-2">
                                    <i class="bx bx-trash me-1"></i> Sil
                                </a>
                                <a href="/Testimonial/Update/@item.TestimonialId" class="btn btn-sm btn-info">
                                    <i class="bx bx-edit-alt me-1"></i> Güncelle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="/Testimonial/Create" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> Yeni Değerlendirme Ekle
        </a>
    </div>
</div>

